                      <% } else { %>
                        <a href="/login" class="login-btn">Login</a>
                      <a href="/login" class="signup-btn">Sign Up</a>
                      <% } %>
                    </div>
                    <div class="phone-header-menubar">
                      <i class="fa-solid fa-ellipsis-vertical"></i>
                      <div class="phone-menu-header-slider-multi-option-when-clicked">
                          <h4 class="phone-who-best-title">Whose Best</h4>
                          <div class="phone-search-category-city">
                              <div class="phone-city-category-search-input">
                                  <div class="phone-category-search">
                                      <input type="text" id="phoneCategoryInput" placeholder="Category..." readonly>
                                      <input type="hidden" id="phoneCategoryValue" name="phone-category">
                                      <div class="phone-select-wrapper">
                                        <ul>
                                            <% businessHeaderCategory.forEach(category => { %>
                                                <li data-value="<%= category.category_value %>"><%= category.category_name %></li>
                                            <% }) %>
                                        </ul>
                                        
                                      </div>
                                  </div>
                                  <div class="phone-city-search">
                                    <input type="text" id="mobile-suggestion-input" placeholder="Search by city" onkeyup="showMobileSuggestions()">
                                    <div class="phone-city-search-input-icon">
                                        <i class="fa-solid fa-magnifying-glass"></i>
                                    </div>
                                    <ul id="mobile-suggestion-list" class="mobile-suggestion-dropdown"></ul>
                                </div>
                                
                              </div>
                          </div>
                  
                          <div class="phone-all-toggle-btns">
                              <div class="phone-ev-toggle-btn-container">
                                  <span class="phone-toggle-label">Switch to EV</span>
                                  <label class="phone-toggle-switch">
                                      <input type="checkbox" id="phone-ev-toggle-input" <%= toggle.ev ? 'checked' : '' %>>
                                      <span class="phone-slider phone-round phone-ev-toggle-slider"></span>
                                  </label>
                              </div>
                              <div class="phone-weman-toggle-btn-container">
                                  <span class="phone-toggle-label">Women Owned Business</span>
                                  <label class="phone-toggle-switch">
                                      <input type="checkbox" id="phone-weman-toggle-input" <%= toggle.women ? 'checked' : '' %>>
                                      <span class="phone-slider phone-round phone-wemen-toggle-slider"></span>
                                  </label>
                              </div>
                          </div>
                  
                          <% if (typeof user !== 'undefined' && user) { %>
                              <!-- Show user profile only if logged in -->
                              <div class="phone-user-profile">
                                  <div class="phone-user-profile-img">
                                    <img src="<%= user.profile_image ? user.profile_image : '/images/dummy/dummy profile.jpg' %>" >
                                  </div>
                                  <div class="phone-user-profile-name-city">
                                      <p><%= user.name %></p>
                                    
                                  </div>
                              </div>
                              <div class="phone-user-free-listing-option-btn">
                                <a href="/edit">Edit profile</a>
                            </div>
                            <div class="phone-user-free-listing-option-btn">
                              <a href="/business-profile">Free Listing</a>
                          </div>
                              <div class="phone-user-free-listing-option-btn">
                                <a href="/book-your-taxi">Book a taxi</a>
                            </div>
                            <div class="phone-user-free-listing-option-btn">
                              <a href="/coming-soon">Book a guide</a>
                          </div>
                          <div class="phone-user-free-listing-option-btn">
                            <a href="/coming-soon">Build a Community</a>
                        </div>
                              <!-- Show Logout button if user is logged in -->
                              <div class="phone-user-profile-logout">
                                  <a href="/logout">Logout</a>
                              </div>
                          <% } else { %>
                              <!-- If no user is logged in, show login button -->
                              <div class="phone-user-profile-logout">
                                  <a href="/login">Login</a>
                              </div>
                              <div class="phone-user-free-listing-option-btn">
                                <a href="/business-profile">Free Listing</a>
                            </div>
                              <div class="phone-user-free-listing-option-btn">
                                <a href="/book-your-taxi">Book a taxi</a>
                            </div>
                            <div class="phone-user-free-listing-option-btn">
                              <a href="/coming-soon">Book a guide</a>
                          </div>
                        
                          <% } %>
                  
                      </div>
                  </div>
                  
                </div>
            </div>
        </div>
    </div>
</header>


