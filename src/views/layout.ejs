<body>
  <header class="main-header">
    <div class="header-web">
        <div class="web-header-content">
            <div class="web-header-top-main-content">
                <div class="web-header-logo">
                    <h5>KnoqDbest</h5>
                </div>
                <div class="web-city-category-search-input">
                    <div class="web-category-search">
                        <input type="text" id="categoryInput" placeholder="Category..." readonly>
                        <input type="hidden" id="categoryValue" name="category">
                        <div class="select-wrapper">
                            <ul>
                                <% businessHeaderCategory.forEach(category => { %>
                                    <li data-value="<%= category.category_value %>"><%= category.category_name %></li>
                                <% }) %>
                            </ul>
                            
                            
                            
                        </div>
                    </div>
                    <div class="web-city-search">
                        <input type="text" id="cityInput" placeholder="Search by city">
                        <div id="suggestionBox" class="suggestions"></div>
                    </div>
                    <div class="web-search-icon">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>
                </div>
                <div class="web-header-login-menubar">
                  
                  <% if (typeof user !== 'undefined' && user) { %>
                    <!-- Show Manage Business if user is logged in -->
                     <!-- use same classes of login  -->
                    <div class="web-header-login">
                        <a href="/your-business/<%= user.id %>" class="signup-btn">Manage Business</a>
                    </div>
                <% } else { %>
                    <!-- Show Login & Signup if user is not logged in -->
                    <div class="web-header-login" id="open-modal">
                        <a href="/login" class="login-btn">Login</a>
                        <a href="/login" class="signup-btn">Sign Up</a>
                    </div>
                <% } %>
                    
                <div class="web-header-menubar">
                  <i class="fa-solid fa-ellipsis-vertical"></i>
                  <div class="web-menu-header-slider-multi-option-when-clicked">
                      
                    <% if (typeof user !== 'undefined' && user) { %>
                          <!-- If User is Logged In -->
                          <div class="web-header-user-profile">
                          
                            <img src="<%= user.profile_image ? user.profile_image : '/images/dummy/dummy profile.jpg' %>" 
                            alt="User Profile">
                              <div class="webs-user-name-city">
                                  <h5><%= user.name %></h5>
                              </div>
                          </div>
                          <div class="web-user-free-listing-option-btn">
                            <a href="/edit">Edit profile</a>
                        </div>
                          
                          <div class="web-user-free-listing-option-btn">
                            <a href="/business-profile">Free listing</a>
                        </div>
                        <div class="web-user-profile-logout">
                          <a href="/book-your-taxi">Book a taxi</a>
                        </div>
                        <div class="web-user-profile-logout">
                          <a href="/coming-soon">Book a guide</a>
                        </div>
                        <div class="web-user-profile-logout">
                          <a href="/coming-soon">Build a Community</a>
                        </div>
                        <div class="web-user-profile-logout">
                          <a href="/logout">Logout</a>
                        </div>
                        
              
                      <% } else { %>
                          <!-- If No User is Logged In -->
                          <div class="web-header-user-profile">
                              <img src="/images/dummy/dummy profile.jpg" alt="User Profile">
                              <div class="webs-user-name-city">
                                  <h5>Guest</h5>
                              </div>
                              

                          </div>
                          <div class="web-user-free-listing-option-btn">
                            <a href="/login">Login</a>
                        </div>
                          <div class="web-user-free-listing-option-btn">
                            <a href="/business-profile">Free Listing</a>
                        </div>
                        <div class="web-user-profile-logout">
                          <a href="/book-your-taxi">Book taxi</a>
                        </div>
                        <div class="web-user-profile-logout">
                          <a href="/coming-soon">Book a guide</a>
                        </div>
                        <div class="web-user-profile-logout">
                          <a href="/coming-soon">Build a Community</a>
                        </div>
                        
                      <% } %>
              
                     
              
                  </div>
              </div>
              
                </div>
            </div>
            <div class="web-header-bottom-main-content">
                <div class="web-header-all-toggle-btns">
                    <div class="web-header-ev-toggle-btn">
                        <span class="toggle-label">Switch to EV</span>
                        <label class="toggle-switch ">
                            <input type="checkbox" id="ev-toggle" <%= toggle.ev ? 'checked' : '' %>>
                            <span class="slider round ev-toggle-slider"></span>
                        </label>
                    </div>
                    <div class="web-header-weman-toggle-btn">
                        <span class="toggle-label">Women Owned Business</span>
                        <label class="toggle-switch ">
                            <input type="checkbox" id="weman-toggle" <%= toggle.women ? 'checked' : '' %>>
                            <span class="slider round wemen-toggle-slider"></span>
                        </label>
                    </div>
                </div>
            </div>
            </div>
        <div class="phone-header-content">
            <div class="phone-header-main-content">
                <div class="phone-header-main-logo">
