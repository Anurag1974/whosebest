
<div class="enter-business-detail-container my-5">
    <h2 class="enter-business-detail-title text-center mb-4">Enter Your Business Details</h2>
    <form id="business-details-form">
        
        <div class="enter-business-detail-row">
            <div class="enter-business-detail-col">
                <label for="name">Business Name</label>
                <input type="text" class="form-control" id="business-name" name="name" required>
            </div>
            <div class="enter-business-detail-col">
                <label for="category">Category</label>
                <input type="text" class="form-control" id="business-category" name="category" required>
                <label for="ev-charging">Does your business have an EV charging facility? <span style="color: red;">*</span></label>
                <select id="ev-charging" class="form-control" required>
                    <option value="" disabled selected>Select</option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
            
        </div>

        <div class="enter-business-detail-row">
            <div class="enter-business-detail-col">
                <label for="latitude">Latitude</label>
                <input type="text" class="form-control" id="latitude" name="latitude" required>
            </div>
            <div class="enter-business-detail-col">
                <label for="longitude">Longitude</label>
                <input type="text" class="form-control" id="longitude" name="longitude" required>
            </div>
        </div>

        <div class="enter-business-detail-row enter-business-detail-location-container">
            <div class="enter-business-detail-col enter-business-detail-full">
                <label for="address">Address</label>
                <div class="enter-business-detail-location-wrapper">
                    <input type="text" class="form-control" id="address" name="address" required>
                    <button type="button" class="enter-business-detail-location-btn" onclick="setCurrentLocation()"><i class="fa-solid fa-location-dot" style="color: #0b5ed7;"></i></button>
                </div>
            </div>
        </div>

        <div class="enter-business-detail-row">
            <div class="enter-business-detail-col">
                <label for="city">City</label>
                <input type="text" class="form-control" id="add-city" name="city" required>
            </div>
            <div class="enter-business-detail-col">
                <label for="state">State</label>
                <input type="text" class="form-control" id="add-state" name="state" required>
            </div>
        </div>

        <div class="enter-business-detail-row">
            <div class="enter-business-detail-col">
                <label for="phone">Phone</label>
                <input type="phone" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="enter-business-detail-col">
                <label for="website">Website</label>
                <input type="text" class="form-control" id="website" name="website">
            </div>
        </div>

        <div class="enter-business-detail-row">
            <div class="enter-business-detail-col enter-business-detail-full">
                <label for="ev-charging">Does your business have an EV charging facility? <span style="color: red;">*</span></label>
                <select id="ev-charging" class="form-control" required>
                    <option value="" disabled selected>Select</option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
        </div>

        <div class="enter-business-detail-row">
            <div class="enter-business-detail-col enter-business-detail-full">
                <label for="images">Upload Images:</label>
                <input type="file" id="images" name="images" multiple accept="image/*" onchange="previewImages()">
                <div id="image-preview-container" class="image-preview-container mt-3"></div>
            </div>
        </div>

        <button type="button" class="enter-business-detail-btn" onclick="addBusinessDetails()">Add Business</button>
    </form>
</div>



<script>
    // Function to preview selected images
    function previewImages() {
        const fileInput = document.getElementById('images');
        const previewContainer = document.getElementById('image-preview-container');
        
        // Clear previous previews
        previewContainer.innerHTML = '';

        // Loop through selected files and create image previews
        for (let i = 0; i < fileInput.files.length; i++) {
            const file = fileInput.files[i];
            
            // Create a new image element for each file
            const img = document.createElement('img');
            const reader = new FileReader();

            // When the file is read, set the image source
            reader.onload = function(event) {
                img.src = event.target.result;
                previewContainer.appendChild(img);
            };

            // Read the file as a data URL
            reader.readAsDataURL(file);
        }
    }
</script>