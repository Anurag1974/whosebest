<link rel="stylesheet" href="/enter-business-detial.css">



<div id="enter-business-details-successModal" class="enter-business-details-modal">
    <div class="enter-business-details-modal-content">
        <span class="enter-business-details-close">&times;</span>
        <div id="enter-business-details-modalIcon" class="enter-business-details-modal-icon"></div>
        <p id="enter-business-details-modalMessage">Default Message</p>
    </div>
</div>

<div class="business-details-container-wrapper">
    <div class="business-details-container">
        <div class="business-details-header">
            <i class="fas fa-building header-icon"></i>
            <h2>Business Registration</h2>
            <p class="header-subtitle">Enter your business details carefully</p>
        </div>
        <form id="business-details-form" class="business-details-form">
            <div class="form-group form-group-row">
                <div class="input-wrapper half-width">
                    <label for="business-name">
                        <i class="fas fa-tag"></i> Business Name
                    </label>
                    <input type="text" id="business-name" name="name" placeholder="Enter your business name" required>
                </div>
                <div class="input-wrapper half-width">
                    <label for="business-category">
                        <i class="fas fa-briefcase"></i> Category
                    </label>
                    <div class="enter-business-detail-dropdown-wrapper">
                        <button class="enter-business-detail-dropdown-btn">Select Category</button>
                        <ul class="enter-business-detail-dropdown-list">
                            <% businessCategory.forEach(category => { %>
                                <li data-value="<%= category.category_value %>"><%= category.category_name %></li>
                            <% }); %>
                        </ul>
                        
                        
                        <input type="hidden" id="business-category" name="category" required>
                    </div>
                </div>
                
            </div>
            <!-- <div class="form-group form-group-row">
                <div class="input-wrapper half-width">
                    <label for="latitude">
                        <i class="fas fa-map-marker-alt"></i> Latitude
                    </label>
                    <input type="text" id="latitude" name="latitude" placeholder="Enter latitude" required>
                </div>
                <div class="input-wrapper half-width">
                    <label for="longitude">
                        <i class="fas fa-map-marker-alt"></i> Longitude
                    </label>
                    <input type="text" id="longitude" name="longitude" placeholder="Enter longitude" required>
                </div>
            </div> -->
            <div class="form-group">
                <label for="address">
                    <i class="fas fa-map-marker-alt"></i> Address
                </label>
                <div class="input-wrapper input-with-button">
                    <input type="text" id="address" name="address" placeholder="Enter address" required>
                    <!-- <button type="button" class="current-location-button" onclick="setCurrentLocation()">
                        <i class="fas fa-location-arrow"></i>
                    </button> -->
                </div>
            </div>
            <div class="form-group form-group-row">
                <div class="input-wrapper half-width">
                    <label for="add-city">
                        <i class="fas fa-city"></i> City
                    </label>
                    <input type="text" id="add-city" name="city" placeholder="Enter city" required>
                </div>
                <div class="input-wrapper half-width">
                    <label for="add-state">
                        <i class="fas fa-map"></i> State
                    </label>
                    <input type="text" id="add-state" name="state" placeholder="Enter state" required>
                </div>
            </div>
            <div class="form-group form-group-row">
                <div class="input-wrapper half-width">
                    <label for="phone">
                        <i class="fas fa-phone"></i> Phone
                    </label>
                    <input type="phone" id="phone" name="phone" placeholder="Enter phone number" required>
                </div>
                <div class="input-wrapper half-width">
                    <label for="website">
                        <i class="fas fa-globe"></i> Website
                    </label>
                    <input type="text" id="website" name="website" placeholder="Enter website">
                </div>
            </div>
            <div class="form-group form-group-row">
                <div class="input-wrapper half-width">
                    <label for="ev-charging">
                        <i class="fas fa-bolt"></i> EV Charging Facility
                    </label>
                    <select id="ev-charging" name="ev-charging" required>
                        <option value="" disabled selected>Select</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
                <div class="input-wrapper half-width">
                    <label for="women-owned">
                        <i class="fas fa-venus"></i> Women Owned
                    </label>
                    <select id="women-owned" name="women-owned" required>
                        <option value="" disabled selected>Select</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
            </div>
            <div class="form-group submit-group">
                <button type="button" class="submit-btn" onclick="addBusinessDetails()">
                    <i class="fas fa-paper-plane"></i> Add Business
                </button>
            </div>
        </form>
    </div>
</div>
<script src="/enter-business-detail.js"></script>


